<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".view.homeView.UserFragment">

    <Button
            android:id="@+id/fragment_logout_button"
            android:layout_width="203dp"
            android:layout_height="57dp"
            android:text="@string/logout"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="104dp"
            android:layout_marginEnd="104dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="96dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:layout_width="233dp"
            android:layout_height="30dp" android:id="@+id/fragment_loggedin_user"
            android:layout_marginBottom="312dp"
            app:layout_constraintBottom_toTopOf="@+id/fragment_logout_button"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="92dp"
            android:layout_marginEnd="92dp" app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center" android:textSize="20sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:textColor="#FFA726"/>
    <ImageView
            android:src="@drawable/user"
            android:layout_width="257dp"
            android:layout_height="196dp" android:id="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="77dp" android:layout_marginEnd="77dp"
            app:layout_constraintEnd_toEndOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>